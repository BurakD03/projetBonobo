{% extends 'template.twig' %}
{% import 'Form.twig' as form %}
{% block head %}
    <title>Bonobo food</title>
{% endblock %}

{% block link %}
    <li class="breadcrumb-item" aria-current="page">Réservation</li>
    <li class="breadcrumb-item active" aria-current="page">Index</li>
{% endblock %}


{% block content %}
    <div class="row">
        <div class="col-md-2">
     
        </div>
        <form class="col-md-8" action="./reservation_create.html" method="post">
            {{ form.input("client_nom", "Nom") }}
            {{ form.input("client_prenom", "Prenom") }}
            {{ form.input("client_email", "Email", null, { type: "email" }) }}
            {{ form.input("client_telephone", "Telephone", null, { type: "phone" }) }}
            
            <div class="controller">
                <div class="row">
                    <div class="col-md-6">
                        <h1> <i class="far fa-calendar-alt"></i> Date de Réservation </h1>
                        
                          <input type="date" name="reser_date" class="form-control" id="date">
                    </div>

                    <div class="col-md-6">
                        <h1> <i class="far fa-clock"></i> Heure de Réservation </h1>
                          <input type="text" name="reser_heure" class="form-control" placeholder="hh:mm:ss" id="heure">
                    </div>
                </div>
                </br>
                <div class="row text-center">
                <div class="col-md-3">
                </div>
                    <div class="col-md-6">
                         
                        <div class="form-group">
                            <h1> <i class="fas fa-utensils"></i> Nombre de couverts : </h1>
                            <input type="number" name="reser_nb" class="form-control" id="nbCouverts">
                            </br>
                            {{ form.textarea("reser_comm"," Laissez votre commentaire ...",null,{class:"col-md-12"}) }}
                            <button type="submit" name="btnReservation" id="button" class="btn btn-primary">Reserver</button>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                </div>
            </div>
        </form>
        <div class="col-md-2">
            
        </div>
    </div>
   <ul class="list-group">
        {% for ligne in tab %}
            <li class="list-group-item">
                {{ ligne.name }}
            </li>
        {% endfor %}
    </ul>
{% endblock %}